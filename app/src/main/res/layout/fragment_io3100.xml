<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/formbody"
        >
        <ImageButton
            android:id="@+id/bt_prev"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/ic_arrow_back_40"
            android:textColor="@color/BlueGray700"
            android:fontFamily="@font/nanumsquareb"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:text="위치이동"
            android:textStyle="bold"
            android:textColor="@color/BlueGray700"
            android:fontFamily="@font/nanumsquareb"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="20sp"
            android:layout_marginLeft="@dimen/login_edit_margin"
            android:layout_marginRight="@dimen/login_edit_margin"
            android:layout_marginBottom="80dp"
            android:text="팔레트 바코드를 스캔해 주세요"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/BlueGray900"
            android:fontFamily="@font/nanumsquareb"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            >
            <TextView
                android:id="@+id/bt_reg"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_marginRight="1dp"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="20sp"
                android:text="등록"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:background="@color/darkprimary"
                android:fontFamily="@font/nanumsquareb"
                />
            <TextView
                android:id="@+id/bt_loc_find"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_marginLeft="1dp"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="20sp"
                android:text="빈랙 조회"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:background="@color/darkprimary"
                android:fontFamily="@font/nanumsquareb"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/main_margin"
            android:layout_marginRight="@dimen/main_margin"
            android:layout_marginTop="86dp"
            android:layout_marginBottom="350dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            >
            <include
                android:id="@+id/ed_plt"
                layout="@layout/view_edit1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <include
                android:id="@+id/vw_item_nm"
                layout="@layout/view_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <include
                android:id="@+id/vw_mfg_dat"
                layout="@layout/view_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <include
                android:id="@+id/vw_dn_flg"
                layout="@layout/view_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <include
                android:id="@+id/vw_qty"
                layout="@layout/view_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        </LinearLayout>

        <include
            android:id="@+id/vw_loc_cd"
            layout="@layout/view_text_big"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="@dimen/main_margin"
            android:layout_marginRight="@dimen/main_margin"
            android:layout_marginBottom="80dp"
            app:layout_constraintBottom_toBottomOf="@+id/ed_loc_cd"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <include
            android:id="@+id/ed_loc_cd"
            layout="@layout/view_edit1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/main_margin"
            android:layout_marginRight="@dimen/main_margin"
            android:layout_marginBottom="70dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_msg"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
