<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <!--    메인화면    -->

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/formbody"
        >
        <ImageButton
            android:id="@+id/bt_prev"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/ic_baseline_logout_24"
            android:textColor="@color/BlueGray700"
            android:fontFamily="@font/nanumsquareb"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
        <ImageButton
            android:id="@+id/bt_setting"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="80dp"
            android:background="@drawable/ic_settings_24"
            android:textColor="@color/BlueGray700"
            android:fontFamily="@font/nanumsquareb"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="130dp"
            android:layout_height="32dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/crown_ci"
            android:textColor="@color/BlueGray700"
            android:fontFamily="@font/nanumsquareb"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="@dimen/main_margin"
            android:layout_marginRight="@dimen/main_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1.5"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="20dp"
                    >
                    <include
                        android:id="@+id/vw_cent_cd"
                        layout="@layout/view_main_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <include
                        android:id="@+id/vw_user_no"
                        layout="@layout/view_main_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <include
                        android:id="@+id/vw_login_dt"
                        layout="@layout/view_main_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <include
                        android:id="@+id/vw_pda_no"
                        layout="@layout/view_main_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                </LinearLayout>

                <!-- Menu Start-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginBottom="20dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_marginBottom="5dp"
                        >
                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_view1"
                            style="@style/styMenu"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                >
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="@dimen/menu_margin"
                                    android:layout_weight="3"
                                    android:src="@drawable/inb"
                                    />
                                <TextView
                                    android:id="@+id/tv_menu1"
                                    style="@style/styMenuText"
                                    android:text="입고"
                                    />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_view2"
                            style="@style/styMenu"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                >
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="@dimen/menu_margin"
                                    android:layout_weight="3"
                                    android:src="@drawable/putwy"
                                    />
                                <TextView
                                    android:id="@+id/tv_menu2"
                                    style="@style/styMenuText"
                                    android:text="피킹"
                                    />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_view3"
                            style="@style/styMenu"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                >
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="@dimen/menu_margin"
                                    android:layout_weight="3"
                                    android:src="@drawable/otb"
                                    />
                                <TextView
                                    android:id="@+id/tv_menu3"
                                    style="@style/styMenuText"
                                    android:text="출고"
                                    />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        >
                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_view4"
                            style="@style/styMenu"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                >
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="@dimen/menu_margin"
                                    android:layout_weight="3"
                                    android:src="@drawable/locmov"
                                    />
                                <TextView
                                    android:id="@+id/tv_menu4"
                                    style="@style/styMenuText"
                                    android:text="적치"
                                    />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_view5"
                            style="@style/styMenu"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                >
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="@dimen/menu_margin"
                                    android:layout_weight="3"
                                    android:src="@drawable/sview"
                                    />
                                <TextView
                                    android:id="@+id/tv_menu5"
                                    style="@style/styMenuText"
                                    android:text="재고조회"

                                    />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_view6"
                            style="@style/styMenu"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                >
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="@dimen/menu_margin"
                                    android:layout_weight="3"
                                    android:src="@drawable/locmov"
                                    />
                                <TextView
                                    android:id="@+id/tv_menu6"
                                    style="@style/styMenuText"
                                    android:text="위치이동"
                                    />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
